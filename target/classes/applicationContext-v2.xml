<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- j'instancie une seule fois cette classe -->
    <bean id="service" class="com.mycompany.invoice.service.prefix.InvoiceServicePrefix">
        <!-- affectation d'une valeur à une propriété -->
        <property name="lastNumber" value="112" />
        <property name="prefix" value="NUM_" />
        <property name="file" value="C\\temp\\monfichier.csv" />

        <!-- injecter l'instance de InvoiceRepositoryMemory dans l'attribut repository de InvoiceServicePrefix -->
        <property name="repository" ref="repository" />
    </bean>

    <bean class="com.mycompany.invoice.controller.web.InvoiceControllerWeb">
        <!-- le ref fait référence à l'id de  InvoiceServicePrefix déclaré au dessus
            en déclarant property j'injecte dans l'attribut 'service' de InvoiceControllerWeb l'instance de InvoiceServicePrefix identifiable via l'id service
        -->
        <property name="service" ref="service" />
    </bean>

    <bean id="repository" class="com.mycompany.invoice.repository.memory.InvoiceRepositoryMemory"/>
    

</beans>